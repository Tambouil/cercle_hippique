---
import ClubInfo from '@/components/ClubInfo.astro';
import Layout from '../layouts/Layout.astro';
import HeroSection from '@/components/HeroSection.astro';
import clubImg from '@images/club.webp';
import Activities from '@/components/Activities.astro';
---

<Layout title="Accueil">
  <HeroSection
    title=`Cercle hippique de <span class="text-teal-800 dark:text-teal-500">Gouvieux</span>`
    subTitle="Centre équestre familial orienté vers le loisir, offrant cours pour tous les niveaux et pensions"
    primaryBtn="Décourvir le club"
    primaryBtnURL={`/club`}
  />

  <ClubInfo
    title=`Le Cercle Hippique de Gouvieux est ouvert et dirigé par <span class="text-teal-700 dark:text-teal-500">Stéphanie Dorothée</span> depuis le 1<sup>er</sup> avril 1997.`
    description="L’activité du centre équestre se déplace du Club aux Terres Noires au rythme des saisons."
    infos={[
      {
        heading: 'Les écuries',
        content: "Site d'hiver qui dispose de boxes, d'un manège couvert et d'un club house.",
        svg: 'house',
      },
      {
        heading: 'Les Terres Noires',
        content: "Site d'été avec pâtures, carrières de travail et accès direct en forêt.",
        svg: 'tree',
      },
      {
        heading: 'Localisation',
        content: `<span class="font-semibold">Les écuries :</span> 7 bis rue de la Daguenette, Gouvieux <br/><span class="font-semibold">Les Terres Noires :</span> 1030 Chemin des Terres Noires, Gouvieux`,
        svg: 'mapPin',
      },
    ]}
    clubImg={clubImg}
  />

  <Activities
    title="Les discipline du Cercle Hippique"
    subTitle="Les disciplines du Cercle Hippique sont les plus adaptées aux besoins de votre projet."
    activities={['CSO', 'Dressage', 'Attelage', 'Voltige', 'Rando/Ballade']}
  />
</Layout>
