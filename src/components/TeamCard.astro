---
import { Image } from 'astro:assets';

interface Props {
  name: string;
  job: string;
  img: ImageMetadata;
}

const { name, job, img } = Astro.props;
---

<div class="group">
  <div class="w-full aspect-square">
    <picture>
      <Image
        src={img}
        alt="photo de profil"
        sizes="(max-width: 800px) 100vw, 400px"
        class="w-full rounded-xl transition group-hover:-translate-y-1 group-hover:shadow-xl bg-white object-cover object-center aspect-square"
        draggable={'false'}
        format={'avif'}
        loading={'eager'}
      />
    </picture>
  </div>
  <div class="mt-4 text-center">
    <h2 class="text-lg text-neutral-800 dark:text-neutral-200 font-bold">{name}</h2>
    <h3 class="text-sm text-neutral-600 dark:text-neutral-400">{job}</h3>
  </div>
</div>
