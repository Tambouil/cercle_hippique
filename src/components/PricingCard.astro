---
import Icon from '@components/ui/icons/Icon.astro';

interface Props {
  name: string;
  description: string;
  price: string;
  billingFrequency: string;
  features: string[];
  isHighlighted?: boolean;
}

const { name, description, price, billingFrequency, features, isHighlighted = false } = Astro.props;
---

<div
  class={`w-full rounded-xl p-6 sm:p-8 ${
    isHighlighted ? 'bg-gradient-to-tr from-teal-800 to-teal-600 text-white' : 'bg-gray-800 text-neutral-100'
  }`}
>
  <div class="mb-4">
    <h3 class="text-2xl font-bold sm:text-3xl">{name}</h3>
    <p class={isHighlighted ? 'text-neutral-300' : 'text-indigo-300'}>{description}</p>
  </div>

  <div class="mb-4">
    <span class="text-4xl font-bold">{price}</span>
    <span class="ms-3 text-sm">{billingFrequency}</span>
  </div>

  <ul class="mb-6 space-y-2">
    {
      features.map((feature) => (
        <li class="flex items-center gap-1.5">
          <Icon name="checkCircle" />
          <span>{feature}</span>
        </li>
      ))
    }
  </ul>
</div>
